FROM golang:1.21-alpine

# Install required packages
RUN apk add --no-cache \
    notmuch \
    notmuch-dev \
    gcc \
    musl-dev

# Set working directory
WORKDIR /app

# Copy go.mod and go.sum
COPY go.mod go.sum ./

# Download dependencies
RUN go mod download

# Copy source code
COPY . .

# Build the application
RUN go build -o /app/api ./cmd/api

# Expose port
EXPOSE 8080

# Run the application
CMD ["/app/api"]
